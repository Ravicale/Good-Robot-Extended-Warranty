<?xml version="1.0" encoding="utf-8"?>
<hud>
  <!--If you need to use a factor of the screen width, you can still do that by removing radius="" and adding scale=""
It will only look for radius if scale is not found-->
  <health>
    <bg x="0.17" y="0.136" w="1" h="1" align_x="0" align_y="0" img="31" scale="0.35" />
    <bar x="0.17" y="0.136" align_x="0" align_y="0" delta_time="50" scale="0.096" start_angle="20" arc_length="320" />
    <img max="70" cur="32" inc="33" dec="34" />
  </health>

  <boss x="-0.01" y="-0.1" w="0.4" h="0.05" align_x="1" align_y="2" delta_time="55">
    <bg align_x="1" align_y="1" x="0" y="-0.002" w="0.6" h="0.2" img="95" />
    <caption x="0" y="0" align_x="1" align_y="1" text="" font="0" color="0" text_align_x="1" text_align_y="1" />
    <bar>
      <max img_start="24" img_mid="25" img_end="26" />
      <cur img_start="27" img_mid="28" img_end="29" />
      <inc img_start="0" img_mid="30" img_end="0" />
      <dec img_start="0" img_mid="30" img_end="0" />

      <offset x="0.007" y="0" />
    </bar>
  </boss>

  <world_title x="0" y="0" w="0.6" h="0.2" align_x="0" align_y="2" img="84">
    <title x="0.05" y="0" align_x="0" align_y="1" font="3" color="2" text_align_x="0" text_align_y="0" />
    <subtitle x="0.05" y="0.035" align_x="0" align_y="1" font="0" color="2" text_align_x="0" text_align_y="2" />
  </world_title>

  <zone_clear x="0" y="0" w="0.6" h="0.2" align_x="0" align_y="2" img="84">
    <title x="0.05" y="0" align_x="0" align_y="1" font="3" color="2" text="Zone Clear!" text_align_x="0" text_align_y="0" />
    <subtitle x="0.05" y="0.035" align_x="0" align_y="1" font="0" color="2" text_align_x="0" text_align_y="2" />
  </zone_clear>

  <cooldown x="0" y="0" align_x="1" align_y="1" delta_time="10" scale="0.05" start_angle="0" arc_length="360">
    <img max="0" cur="77" inc="0" dec="77" />
  </cooldown>

  <warranty align_x="0" align_y="0" x="0.131" y="0.066" w="0.08" h="0.08" img="78" circle="false" />

  <!--Button image _b = when multiplier is 0, _h when multiplier is 1-4, _s when multiplier is >5
  Caption = score value, desc = the text "score", tooltip = multiplier-->
  <score x="0.052" y="-0.005" w="0.6" h="0.2" align_x="2" align_y="0" img_b="67" img_s="69" img_h="68">
    <caption x="0.117" y="-0.055" align_x="1" align_y="1" font="3" color="2" text_align_x="2" text_align_y="0" />
    <desc x="-0.162" y="-0.052" align_x="1" align_y="1" text="Score" font="0" color="2" text_align_x="0" text_align_y="2" />
    <tooltip x="0.17" y="-0.035" align_x="1" align_y="1" font="3" color="0" text_align_x="1" text_align_y="1" />
  </score>

  <!--Button image _b = normal, _h when money is increased, _s when money is decreased
  Caption = money value, desc = the text "money"-->
  <money x="0" y="0" w="0.1" h="0.1" align_x="0" align_y="0" img_b="0" img_s="0" img_h="0" limit="3">
    <caption x="0.448" y="0.053" align_x="0" align_y="0" text="" font="3" color="0" color_s="2" color_h="2" text_align_x="2" text_align_y="1" />
    <desc x="0.471" y="0.0375" align_x="0" align_y="0" text="$" font="0" color="2" text_align_x="0" text_align_y="2" />
  </money>

  <!--Primary and secondary weapon sprites are drawn here-->
  <primary align_x="0" align_y="0" x="0.110" y="0.130" w="0.06" h="0.06" />
  <secondary align_x="0" align_y="0" x="0.170" y="0.130" w="0.06" h="0.06" />

  <!--Compass to guide the player to exit-->
  <compass align_x="1" align_y="0" x="0.04" y="0.066" w="0.08" h="0.08" r="255" g="255" b="255" a="255" size="50">
    <bg align_x="1" align_y="0" x="0" y="-0.005" w="0.6" h="0.2" img="85" circle="false" />
    <exit align_x="1" align_y="0" x="0" y="0.04" w="0.05" h="0.05" img="21" circle="false" />
  </compass>
</hud>